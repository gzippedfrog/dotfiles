#!/bin/sh

## general
alias s="sudo"
alias v=$EDITOR
alias sv="sudo -e"
#alias stow="stow -t ~/ -v"
alias la="ls -hla --color=auto --group-directories-first"
alias lsblk="lsblk | grep -v '^loop'"
alias gdc="git commit -m \"some changes\""

## pacman
alias p="sudo pacman"
alias upg="sudo pacman -Syu"
alias rmo="sudo pacman -Rs $(pacman -Qqtd)"

